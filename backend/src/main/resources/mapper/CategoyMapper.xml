<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.spmall.mapper.CategoryMapper">
    <insert id="insertCategory1" parameterType="com.example.spmall.pojo.Category1">
        <selectKey resultType="int" keyProperty="id" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into base_category (category_name) values (#{categoryName})
    </insert>
    <insert id="insertCategory2" parameterType="com.example.spmall.pojo.Category2">
        <selectKey resultType="int" keyProperty="id" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into base_category2 (category_name, category1_id) values (#{categoryName}, #{category1Id})
    </insert>
    <update id="updateCategory2" parameterType="com.example.spmall.pojo.Category2">
        update base_category2
        <set>
            <if test="categoryName !=  null and categoryName != ''">
                category_name= #{categoryName}
            </if>
        </set>
        where id = #{id} and category1_id = #{category1Id}
    </update>
    <delete id="deleteCategory2ListByIds" parameterType="list">
        delete
        from base_category2
        where
        <foreach collection="category2List" item="category2" index="index" open="" close="" separator="AND">
            (id != #{category2.id} AND category1_id = #{category2.category1Id})
        </foreach>
    </delete>

    <select id="selectCategory2ByCategory1Id" resultType="com.example.spmall.pojo.Category2">
        select c2.id,c2.category1_id, c2.category_name from base_category2 c2 where c2.category1_id = #{id}
    </select>
    <select id="baseCategoryList" resultMap="baseCategoryMap">
        select c1.id, c1.category_name, c1.level
        from base_category c1
    </select>

    <resultMap id="baseCategoryMap" type="com.example.spmall.pojo.Category1">
        <result column="id" property="id"></result>
        <result column="category_name" property="categoryName"></result>
        <result column="level" property="level"></result>
        <collection property="category2List" ofType="com.example.spmall.pojo.Category2" column="id" select="selectCategory2ByCategory1Id"></collection>
    </resultMap>
</mapper>
