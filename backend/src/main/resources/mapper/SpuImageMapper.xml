<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.spmall.mapper.SpuImageMapper">
  <insert id="insertSpuImages" parameterType="list">
     insert into spu_image (spu_id, img_name, img_url) values
      <foreach collection="list" item="item" separator=",">
          (#{item.spuId},#{item.imgName}, #{item.imgUrl})
      </foreach>
  </insert>
  <delete id="deleteSpuImages" parameterType="list">
      DELETE FROM SPU_IMAGE
      <where>
          <foreach collection="list" item="item" separator="AND" >
              (spu_id = #{item.spuId} and id != #{item.id})
          </foreach>
      </where>
  </delete>
    <select id="getSpuImageList" resultType="com.example.spmall.pojo.SpuImage">
        select id, spu_id, img_url, img_name
        from spu_image
        where spu_id = #{spuId}
    </select>
</mapper>
